@model IEnumerable<Store>
@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="text-gray-600 body-font">
  <div class="container px-5 py-24 mx-auto">
    <div class="flex justify-center mb-8 flex-wrap -m-4">
      <div class="p-4 lg:w-1/3">
        <div class="h-full bg-gray-100 bg-opacity-75 px-8 pt-16 pb-24 rounded-lg overflow-hidden text-center relative">
                    <h2 class="tracking-widest text-[2rem] title-font font-medium text-gray-400 mb-1">Active Employees</h2>
                    <p class="leading-relaxed text-black text-[2rem] mb-3">@ViewBag.ActiveEmployee</p>
        </div>
      </div>
            <div class="p-4 lg:w-1/3">
                <div class="h-full bg-gray-100 bg-opacity-75 px-8 pt-16 pb-24 rounded-lg overflow-hidden text-center relative">
                    <h2 class="tracking-widest text-[2rem] title-font font-medium text-gray-400 mb-1">Active Stores</h2>
                    <p class="leading-relaxed text-black text-[2rem] mb-3">@ViewBag.ActiveStore</p>
                </div>
            </div>
    </div>
        <div class="relative w-[90rem] overflow-x-auto sm:rounded-lg">
             <table class="w-full text-sm text-left text-gray-500 dark:text-gray-400">
                <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
                    <tr>
                        <th scope="col" class="px-6 py-3">
                            Store Name
                        </th>
                        <th scope="col" class="px-6 py-3">
                            Number of active employee
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="bg-white border-b dark:bg-gray-900 dark:border-gray-700">
                            <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">
                                @item.Name
                            </th>
                            <td class="px-6 py-4">
                                @item.Employee.Count()
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
  </div>
</section>