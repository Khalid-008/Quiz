@model IEnumerable<Employee>
@{
    ViewData["Title"] = "Employees";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="relative w-[90rem] overflow-x-auto sm:rounded-lg">
    <button class="text-white bg-blue-700 hover:bg-blue-800  font-medium rounded-lg text-sm px-5 py-2.5 mr-2 mb-2 dark:bg-blue-600 dark:hover:bg-blue-700 focus:outline-none "><a asp-controller="Employee" asp-action="AddEmployee">Add </a></button>
    <table class="w-full text-sm text-left text-gray-500 dark:text-gray-400">
        <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
            <tr>
                <th scope="col" class="px-6 py-3">
                    ID
                </th>
                <th scope="col" class="px-6 py-3">
                    Name
                </th>
                <th scope="col" class="px-6 py-3">
                    Age
                </th>
                <th scope="col" class="px-6 py-3">
                    Skill
                </th>
                <th scope="col" class="px-6 py-3">
                    Store ID
                </th>
                <th scope="col" class="px-6 py-3">
                    
                    Status
                </th>
                <th scope="col" class="px-6 py-3">
                    Created Date
                </th>
                <th scope="col" class="px-6 text-center py-3">
                    Action
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr class="bg-white border-b dark:bg-gray-900 dark:border-gray-700">
                <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">
                    @item.Id
                </th>
                <td class="px-6 py-4">
                        @item.Name
                </td>
                <td class="px-6 py-4">
                        @item.Age
                </td>
                <td class="px-6 py-4">
                        @item.Skill
                </td>
                <td class="px-6 py-4">
                        @item.Store_id
                    </td>
                <td class="px-6 py-4">
                        @item.Status
                    </td>
                <td class="px-6 py-4">
                        @item.Created_date
                </td>
                <td class="px-6 flex justify-center py-4">
                        <a href="@Url.Action("UpdateEmployee", "Employee", new {ID=item.Id})" class="font-medium px-4 text-blue-600 dark:text-blue-500 hover:underline">Edit</a>
                        <a href="@Url.Action("DeleteEmployee", "Employee", new {ID=item.Id})" class="font-medium text-blue-600 dark:text-red-400 hover:underline">Delete</a>
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>
